<launch>
  <arg name="imu" default="0" />
  <arg name="camera" default="0" />

  <include if="$(arg imu)" file="$(find rt_usb_9axis_sensor)/launch/rt_usb_9axis_sensor.launch" />

  <!-- <node pkg="raspimouse_with_Jetson_nano" name="buzzer" type="buzzer.py" required="true" />

  <node pkg="raspimouse_with_Jetson_nano" name="lightsensors" type="lightsensors" required="true">
    <param name="frequency" value="10" />
  </node> -->

  <arg name="initial_motor_power" default="on" />
  <node pkg="raspimouse_with_Jetson_nano" name="motors" type="motors" required="true"
    output="screen" args="$(arg initial_motor_power)" />

  <group if="$(arg camera)">  
    <include file="$(find usb_cam)/launch/usb_cam_microsoft.launch"/>
  </group>  

  <!-- <node pkg="raspimouse_with_Jetson_nano" name="leds" type="leds" required="true" />
  <node pkg="raspimouse_with_Jetson_nano" name="buttons" type="buttons" required="true" /> -->
</launch>
